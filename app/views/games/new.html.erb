<h1>New game</h1>

<br>

<div class="letters">
  <% @letters.each do |letter| %>
    <h2 id=letter> <b><%= letter %></b></h2>
  <% end %>
</div>

<form action="/score" method="post">
  <input type="hidden" name="letters" value="<%=@letters.join%>">
  <label for="word">What is the longest word you can find ?</label><br>
  <input type="text" name="word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>


